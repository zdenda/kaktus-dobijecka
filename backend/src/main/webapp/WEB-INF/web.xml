<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">

    <app-engine-apis>true</app-engine-apis>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>admin</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>cron</web-resource-name>
            <url-pattern>/cron/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>tasks</web-resource-name>
            <url-pattern>/tasks/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>


    <filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>eu.zkkn.android.kaktus.backend.OfyHelper</listener-class>
    </listener>

    <servlet>
        <servlet-name>EndpointsServlet</servlet-name>
        <servlet-class>eu.zkkn.android.kaktus.backend.EndpointsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EndpointsServlet</servlet-name>
        <url-pattern>/_ah/api/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManualNotificationsServlet</servlet-name>
        <servlet-class>eu.zkkn.android.kaktus.backend.ManualNotificationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManualNotificationsServlet</servlet-name>
        <url-pattern>/admin/send-notifications</url-pattern>
    </servlet-mapping>

    <!-- Cron -->
    <servlet>
        <servlet-name>CheckServlet</servlet-name>
        <servlet-class>eu.zkkn.android.kaktus.backend.CheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckServlet</servlet-name>
        <url-pattern>/cron/check</url-pattern>
    </servlet-mapping>

    <!-- Tasks -->
    <servlet>
        <servlet-name>FcmSender</servlet-name>
        <servlet-class>eu.zkkn.android.kaktus.backend.FcmSender</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FcmSender</servlet-name>
        <url-pattern>/tasks/fcm-sender</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
